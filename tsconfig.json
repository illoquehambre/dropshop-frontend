{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/public/*": ["public/*"],
      "@/app/*": ["app/*"],
      "@/api/*": ["app/api/*"],
      "@/components/*": ["app/components/*"],
      "@/services/*": ["app/services/*"],
      "@/dto/*": ["app/dto/*"],
      "@/styles/*": ["app/styles/*"],
      "@/context/*": ["app/context/*"],
      "@/hooks/*": ["app/hooks/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/lib/mongodb.js", "app/services/productsService.js", "app/layout.jsx"],
  "exclude": ["node_modules"]
}
